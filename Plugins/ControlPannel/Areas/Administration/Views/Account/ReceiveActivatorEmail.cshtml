@using AradCms.Core.Helpers
@model  AradCms.Core.ViewModel.Account.ActivationEmailViewModel
@{
    Layout = "~/Views/Themes/Admin/_LayoutAdmin.cshtml";
}
<div class="row">
    @using (Html.BeginForm(PaMVC.Administration.Account.ActionNames.ReceiveActivatorEmail, PaMVC.Administration.Account.Name, null, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "receiveActivationEmailForm", autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-10 col-md-offset-1">
            <div class="panel  panel-default">
                <div class="panel-heading">
                    <strong> دریافت ایمیل فعال سازی</strong>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.NoAutoCompleteTextBoxForLtr(m => m.Email)
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="editor-label">
                            Are you human?
                        </div>
                        <div class="editor-field">
                            @Html.reCaptcha()
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-12">
                            <button type="button" autocomplete="off" onclick="AjaxForm.CustomSubmit(this, 'receiveActivationEmailForm')" data-loading-text="در حال ارسال اطلاعات" class="btn btn-success btn-block">
                                دریافت ایمیل فعال سازی
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}