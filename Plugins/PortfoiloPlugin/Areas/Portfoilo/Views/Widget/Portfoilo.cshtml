@model IEnumerable<PortfoiloPlugin.ViewModel.DataTablePortfoilo>
@if (Model != null)
{

    <div class="divide70"></div>
    <div class="section-title-wrapper">
        <h3 class="section-title">آخرین پروژه های ما</h3>
    </div>
    <div class="owl-portfolio owlcarousel carousel-th">

        @foreach (var item in Model)
        {
            <div class="item">
                <figure>
                    <a href="~/#">
                        <div class="text-overlay">
                            <div class="info">نمایش پروژه</div>
                        </div>
                        <img src="~/Uploads/SiteMedia/Portfoilo/@item.PostImage" alt="" />
                    </a>
                </figure>
                <div class="image-caption text-center">
                    <h4 class="post-title upper"><a href="~/#">@Html.DisplayFor(a => item.Title)</a></h4>
                    <div class="meta"> <span class="categories"><a href="#">@Html.DisplayFor(a => item.CategoryName)</a></span> </div>
                    <p>@Html.DisplayFor(a => item.Summary)</p>
                </div>
            </div>
        }
        <!-- /.item -->
    </div>

}