@model IEnumerable<BlogPlugin.ViewModel.DataTablePost>
@if (Model != null)
{
    <div class="sidebox widget">
        <strong class="widget-title">
            پر بازدیدترین مطالب
        </strong>
        <ul class="post-list">
            @foreach (var item in Model)
                {
                <li>
                    <div class="icon-overlay"> <a href="@Url.Action(BMVC.Blog.Widget.ActionNames.Detailes, BMVC.Blog.Widget.Name, new { Id = item.Id, area = BMVC.Blog.Name })"><img src="~/Uploads/SiteMedia/Post/@item.PostImage" alt="@item.Title" /> </a> </div>
                    <div class="meta">
                        <strong>
                            <a href="@Url.Action(BMVC.Blog.Widget.ActionNames.Detailes,BMVC.Blog.Widget.Name,new { Id=item.Id,area= BMVC.Blog.Name})">
                                @Html.DisplayFor(a => item.Title)
                            </a>
                        </strong>
                        <em>@Html.ConvertToPersianDateTime(item.Timestamp)</em>
                    </div>
                </li>
            }
        </ul>
        <!-- /.post-list -->
    </div>
}