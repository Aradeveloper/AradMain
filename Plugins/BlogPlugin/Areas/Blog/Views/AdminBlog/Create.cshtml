@model BlogPlugin.ViewModel.AddOrUpdateBlog
@{
    Layout = "~/Views/Themes/Admin/_LayoutAdmin.cshtml";

}
<!-- Right labels -->
@using (Html.BeginForm(BMVC.Blog.AdminBlog.ActionNames.Create, BMVC.Blog.AdminBlog.Name, new { area = BMVC.Blog.Name }, FormMethod.Post, new { role = "form", @class = "form-horizontal", autocomplete = "off", id = "addblog", enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="panel panel-default">
            <div class="panel-heading"><h6 class="panel-title"><i class="icon-paragraph-right2"></i> ایجاد بلاگ</h6></div>
            <div class="panel-body">

                <div class="form-group">
                    @Html.LabelFor(a => a.Name, new { @class = "col-sm-2 control-label text-right" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(a => a.Name, new { @class = "form-control", @placeholder = "placeholder" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(a => a.Slug, new { @class = "col-sm-2 control-label text-right" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(a => a.Slug, new { @class = "form-control", @placeholder = "placeholder" })
                    </div>
                </div>

                <div class="form-group">

                    <label class="checkbox-inline pull-right">
                        @Html.CheckBoxFor(a => a.IsActive, new { @class = "switch switch-large", @type = "checkbox" })
                        @Html.LabelFor(a => a.IsActive)
                    </label>
                </div>

                <div class="form-group">
                    <label for="InputFile" class="col-sm-4 control-label">بارگذاری عکس</label>
                    <div class="col-sm-8">
                        <input type="file" class="styled" name="InputFile" id="InputFile">
                    </div>
                </div>
                <div class="form-actions text-right">
                    <input type="submit" value="ثبت اطلاعات" class="btn btn-primary left">
                </div>
            </div>
        </div>
    </div>
}
<!-- /right labels -->
@section scripts {

    @Scripts.Render("~/bundles/jqueryval")
}