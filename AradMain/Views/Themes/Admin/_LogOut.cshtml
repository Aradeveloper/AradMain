@using Microsoft.AspNet.Identity
@using AradCms.Core.Service;
@if (Request.IsAuthenticated)

{
    using (Html.BeginForm("LogOff", "Account", new { area = "Administration" }, FormMethod.Post, new { id = "logoutForm", @class = "nav navbar-nav navbar-right collapse" }))
    {
        @Html.AntiForgeryToken()

        <li class="user dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown">
                <img src="http://placehold.it/300" alt="">
                <span>@User.Identity.GetUserName()</span>
                <i class="caret"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-right icons-right">
                <li><a href="@Url.Action("ChangePassword", "Account", new { area = "Administration" })"><i class="icon-user"></i> پروفایل</a></li>
                <li><a href="#"><i class="icon-bubble4"></i> پیام ها</a></li>
                <li><a href="#"><i class="icon-cog"></i> تنظیمات</a></li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="icon-exit"></i> خروج</a></li>
            </ul>
        </li>

    }

}